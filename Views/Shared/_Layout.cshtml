<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CRUDContatos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CRUDContatos.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
    <script>
        // as funções de adicionar e remover email foram adicionadas no layout pra não precisar repetir o código na view de editar
        // e criar
        function adicionarEmailLista() {
            var container = document.getElementById('emails-container');
            var rows = container.querySelectorAll('.row');
            var novo = rows[rows.length - 1].cloneNode(true);
            novo.querySelector('input[name="ListaEmails"]').value = '';
            container.appendChild(novo);
            atualizarBotoesEmail();
        }

        function removerEmail(btn) {
            var row = btn.closest('.row');
            row.remove();
            atualizarBotoesEmail();
        }

        // essa função controla quais botões vão aparecer dependendo de quantas linhas existem na tela
        function atualizarBotoesEmail() {
            var rows = document.querySelectorAll('#emails-container .row');
            rows.forEach(function (row, idx) {
                var btnCol = row.querySelector('.col-2');
                btnCol.innerHTML = '';

                if (rows.length === 1) {
                    btnCol.innerHTML = `<button type="button" onclick="adicionarEmailLista()" class="btn btn-success col-12">
                        <i class="bi bi-plus-lg"></i>
                    </button>`;
                } else if (idx === rows.length - 1) {
                    btnCol.innerHTML =
                        `<button type="button" onclick="adicionarEmailLista()" class="btn btn-success me-1 col-6">
                            <i class="bi bi-plus-lg"></i>
                        </button>
                        <button type="button" onclick="removerEmail(this)" class="btn btn-danger col-6">
                            <i class="bi bi-trash"></i>
                        </button>`;
                } else {
                    btnCol.innerHTML = `<button type="button" onclick="removerEmail(this)" class="btn btn-danger col-12">
                        <i class="bi bi-trash"></i>
                    </button>`;
                }
            });
        }
    </script>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
